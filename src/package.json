{
  "name": "bootstrapper-node-api",
  "version": "1.0.0",
  "type": "module",
  "description": "Boostrapper that creates a server using express to test CICDs.",
  "main": "app.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "start": "node app.js",
    "build": "webpack --mode production --entry ./app.js --output-path ../dist --config webpack.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/macreiben-dev/bootstrapper-node-api.git"
  },
  "author": "Christian Finel",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/macreiben-dev/bootstrapper-node-api/issues"
  },
  "homepage": "https://github.com/macreiben-dev/bootstrapper-node-api#readme",
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx}"
    ],
    "coveragePathIgnorePatterns": [
      "/coverage/"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "babel-node": "^0.0.1-security",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "webpack": "^5.83.1",
    "webpack-cli": "^5.1.1"
  }
}